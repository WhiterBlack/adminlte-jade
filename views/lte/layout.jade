doctype html
html
	head
		include conf
		meta(charset='UTF-8')
		title #{lteconf.project.fullname} | Dashboard
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no', name='viewport')
		link(href='#{lteconf.static_files_prefx}/css/bootstrap.min.css', rel='stylesheet', type='text/css')
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css')
		link(rel='stylesheet', href='#{lteconf.static_files_prefx}/css/AdminLTE.min.css')
		link(rel='stylesheet', href='#{lteconf.static_files_prefx}/css/skins/skin-blue.min.css')
		link(rel='stylesheet', href='https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css')
		// HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
		// WARNING: Respond.js doesn't work if you view the page via file://
		//if lt IE 9
			script(src='https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js')
			script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
		style.
			.container {
				width: 100%;}
		block h
		link(rel='stylesheet', href='#{lteconf.static_files_prefx}/css/AdminLTE.min.css')
		link(rel='stylesheet', href='#{lteconf.static_files_prefx}/css/skins/skin-blue.min.css')
	body.skin-blue.sidebar-mini
		.wrapper
			header.main-header
				a.logo(href='/' target="_blank")
					span.logo-mini
						b #{lteconf.project.mininame[0]}
						| #{lteconf.project.mininame[1]}
					span.logo-lg
						| #{lteconf.project.fullname}
				nav.navbar.navbar-static-top(role='navigation')
					a.sidebar-toggle(href='#', data-toggle='offcanvas', role='button')
						span.sr-only Toggle navigation     
					.navbar-custom-menu
						ul.nav.navbar-nav
							li.dropdown.user.user-menu
								a.dropdown-toggle(href='#', data-toggle='dropdown')
									img.user-image(src='#{lteconf.getava}', alt='User Image')
									span.hidden-xs 
										| #{lteconf.getusername}
								ul.dropdown-menu
									li.user-header
										img.img-circle(src='#{lteconf.getava}', alt='User Image')
										p
											| #{lteconf.getusername}
											//small Member since Nov. 2012
									li.user-footer
										.pull-left
											a.btn.btn-default.btn-flat(href='#{lteconf.path.user}') Профиль
										.pull-right
											a.btn.btn-default.btn-flat(href='#{lteconf.path.logout}') Выход
							li
								a(href='#', data-toggle='control-sidebar')
									i.fa.fa-gears      
			aside.main-sidebar
				section.sidebar
					.user-panel
						.pull-left.image
							img.img-circle(src='#{lteconf.getava}', alt='User Image')
						.pull-left.info
							p 
							|Привет, #{lteconf.getusername}
					include left_menu
					+lte_left_menu
			.content-wrapper
				section.content-header
					block content
			footer.main-footer
				.pull-right.hidden-xs
					| projectname
			aside.control-sidebar.control-sidebar-dark
				ul.nav.nav-tabs.nav-justified.control-sidebar-tabs
					li.active
						a(href='#control-sidebar-home-tab', data-toggle='tab')
							i.fa.fa-home
					li
						a(href='#control-sidebar-settings-tab', data-toggle='tab')
							i.fa.fa-gears
			.control-sidebar-bg
	block message-modal
	script(src='#{lteconf.static_files_prefx}/js/jquery-2.2.1.min.js')
	script(src='#{lteconf.static_files_prefx}/js/bootstrap.min.js', type='text/javascript')
	script(src='#{lteconf.static_files_prefx}/js/app.js', type='text/javascript')
	block javascript
