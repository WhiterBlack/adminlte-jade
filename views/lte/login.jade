doctype html
html.bg-black
  head
    meta(charset='UTF-8')
    title ideal-gel.ru | Авторизация
    meta(content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no', name='viewport')
    // bootstrap 3.0.2
    link(href='/lte/stylesheets/bootstrap.min.css', rel='stylesheet', type='text/css')
    // font Awesome
    link(href='/lte/stylesheets/font-awesome.min.css', rel='stylesheet', type='text/css')
    // Theme style
    link(href='/lte/stylesheets/AdminLTE.css', rel='stylesheet', type='text/css')
    // HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //if lt IE 9
      script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
      script(src='https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js')
  body.bg-black
    #login-box.form-box
      if (!fail)
        .header Вход в систему
      if (fail)
        .header(style='background: #BD003D;')
          h4 Вход в систему
          label Неверное имя пользователя или пароль. Проверьте правильность введенных данных.
      form(action='#', method='post')
        .body.bg-gray
          .form-group
            input.form-control(type='text', name='username', placeholder='Ваш логин')
          .form-group
            input.form-control(type='password', name='password', placeholder='Пароль')
        .footer
          button.btn.bg-olive.btn-block(type='submit') Войти
    // jQuery 2.0.2
    script(src='/lte/javascripts/jquery.min.js')
    // Bootstrap
    script(src='/lte/javascripts/bootstrap.min.js', type='text/javascript')
